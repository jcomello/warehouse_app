<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-group">
    <%= f.input :password, label: t('session.new_password'), required: true, autofocus: true %>
    <%= f.input :password_confirmation, label: t('session.confirm_new_password'), required: true %>
  </div>

  <div class="form-group">
    <%= f.button :submit, t('session.change_password'), class: 'btn btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
