<h3><%= t('.title') %></h3>

<%= render 'shared/notice', notice: notice %>

<% if @inputs.present? %>

  <%= form_tag inputs_path, :method => 'get' do %>
    <%= label_tag :search_start, t('.search_start') %>
    <%= text_field_tag :search_start, params[:search_start] %>
    <%= label_tag :search_end, t('.search_end') %>
    <%= text_field_tag :search_end, params[:search_end] %>

    <%= submit_tag t('buttons.search'), :name => nil, class: 'btn btn-default' %>
  <% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('.product') %></th>
        <th><%= t('.warehouse') %></th>
        <th><%= t('.quantity') %></th>
        <th><%= t('.created_at') %></th>
        <th><%= t('.employee') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @inputs.each do |input| %>
        <tr id="input_<%= input.id %>">
          <td><%= input.product.name %></td>
          <td><%= input.warehouse.street %>, <%= input.warehouse.number %></td>
          <td><%= input.quantity %></td>
          <td><%= l(input.created_at) %></td>
          <td><%= input.employee.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><%= t('.no_inputs') %></p>
<% end %>

<%= link_to new_input_path, class: 'btn btn-success' do %>
  <span class="glyphicon glyphicon-plus-sign"></span>
  <%= t('.new_input') %>
<% end %>
